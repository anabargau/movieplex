extends layout 

block content 

  div.title #{title} 

  dl.genre-movie-list
    for movie in genre_movies 
      div.list-group
        dt.movie-list-title #[a(href=movie.url) #{movie.title}(#{movie.year})]
        dd #{movie.synopsis}
    else 
      div.no-movie-msg This genre has no movies yet.

  div.control-link-container
    a(href=genre.url + '/delete') Delete genre
    a(href=genre.url + '/update') Update genre
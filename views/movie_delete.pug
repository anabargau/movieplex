extends layout 

block content 
  div.delete-movie-container
    div.title #{title}(#{movie.year})

    img.movie-img(src=movie.img)

    div.delete-movie-question Are you sure you want to delete this movie?
    
    form(method='POST' action='')
      input(type='hidden' name='movieid' required='true' value=movie._id)

      div.btns-container.delete
          button.primary-btn(type='submit') Delete 
          button.primary-btn(type='button') #[a(href=movie.url) Cancel]
      
      

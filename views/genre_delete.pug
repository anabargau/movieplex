extends layout

block content 

  div.title #{genre.title}

  if genre_movies.length > 0
    div.cannot-delete-msg Before you can delete this genre, you must delete the associated movies first: 
    dl.genre-movie-list
      for movie in genre_movies 
        div.list-group
          dt.movie-list-title #[a(href=movie.url) #{movie.title}(#{movie.year})]
          dd #{movie.synopsis}

  else 
    div.delete-genre-question Are you sure you want to delete this genre? 
    form(method='post' action='')
      input(type='hidden' name='genreid' required='true' value=genre._id)

      div.btns-container.delete
        button.primary-btn(type='submit') Delete 
        button.primary-btn(type='button') #[a(href=genre.url) Cancel]
      
